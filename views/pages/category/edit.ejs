<h1 class="h3 mb-4 text-gray-800">Edit Profile</h1>

<form class="user"  action="/category/<%= category.id %>?_csrf=<%= csrfToken %>" method="POST" enctype="multipart/form-data">

    <div class="form-group row">
        <label for="name" class="col-sm-2">Name</label>
        <div class="col-sm-10">
          <input type="text" name="name" required class="form-control form-control-user" value="<%= category.name %>">
        </div>
      </div>
   

    <div class="form-group row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Image</label>
      
      <div class="col-sm-4">
        <img src="http://localhost:5000/public/upload/category/<%= category.image %>" style="width:150px;height:150px" alt="">
    </div>


      <div class="col-sm-6">
          <input type="file"id="image" name="image"
              class="form-control">
      </div>

    </div>



    <div class="text-center">
        <a href="/category" class="btn btn-primary btn-user">Back</a>
        <button type="submit" class="btn btn-success btn-user text-center">Update</button>
    </div>

</form>


