 <!-- Page Heading -->
 <h1 class="h3 mb-4 text-gray-800">Data Product</h1>

 
 <div class="table-role">


    <table class="table table-striped">
        <thead class="table-dark">
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Color</th>
            <th scope="col">Stock</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Image</th>
            <th scope="col">Action</th>
           
          </tr>
        </thead>
        <tbody>

            <% products.forEach((product,index) => { %>
                <tr>
                  <th scope="row"><%= index += 1 %></th>
                  <td><%= product.name %></td>
                  <td><%= product.color %></td>
                  <td><%= product.stock %></td>
                  <td><%= product.price %></td>
                  <td><%= product.categories.name %></td>
                  <td>
                      <img src="http://localhost:5000/public/upload/product/<%= product.image %>" style="width:50px;height50px" alt="">
                  </td>
                  <td>
                      <a href="#" class="btn btn-warning btn-circle btn-sm"><i class="fas fa-edit"></i></a>
                     
                  </td>
                </tr>
                <% }) %>
        
        </tbody>
      </table>

 </div>


