<h1 class="h3 mb-4 text-gray-800">Role</h1>

<form action="/role/<%= role.id %>" method="POST" class="user">


    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" placeholder="name" name="name" value="<%= role.name %>" required id="name"
            class="form-control form-control-user ">
            
        </div>

    </div>

    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

    <div class="text-center">
        <a href="/role" class="btn btn-primary btn-user">Back</a>
        <button type="submit" class="btn btn-success btn-user text-center">Update</button>
    </div>

</form>