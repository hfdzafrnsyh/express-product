<h1 class="h3 mb-4 text-gray-800">Edit Profile</h1>

<form class="user"  action="/profile/<%= user.id %>" method="POST" enctype="multipart/form-data">


    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" placeholder="email" value="<%= user.email %>" required id="email" name="email"
                readonly class="form-control form-control-user ">
        </div>

    </div>

    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" placeholder="name" value="<%= user.name %>" required id="name" name="name"
                class="form-control form-control-user ">
        </div>

    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            <input type="text" placeholder="phone" name="phone" value="<%= user.phone %>" required id="phone"
                class="form-control form-control-user ">
        </div>

    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Image</label>
        
        <div class="col-sm-4">
            <img src="http://localhost:5000/public/user/<%= user.photo %>" style="width:150px;height:150px" alt="">
        </div>

        <div class="col-sm-6">
            <input type="file"id="image" name="image"
                class="form-control">
        </div>

    </div>




    <div class="text-center">
        <a href="/profile" class="btn btn-primary btn-user">Back</a>
        <button type="submit" class="btn btn-success btn-user text-center">Update</button>
    </div>

</form>


