<h1 class="h3 mb-4 text-gray-800">Edit Password</h1>


<% if(locals.message) { %>
    <strong class="text-danger"><%= message.error %> </strong>
    <strong class="text-success"><%= message.success %> </strong>
     <% } %>  

<form class="user"  action="/user/password/<%= user.id %>" method="POST">


    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Your Password</label>
        <div class="col-sm-10">
            <input type="password" placeholder="Your Password"  required id="old_password" name="old_password"
                class="form-control form-control-user ">
        </div>

    </div>

    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">New Password</label>
        <div class="col-sm-10">
            <input type="password" placeholder="New Password"required id="new_password" name="new_password"
                class="form-control form-control-user ">
        </div>

    </div>
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Repeat Password</label>
        <div class="col-sm-10">
            <input type="password" placeholder="Repeat Password" name="repeat_password"  required id="repeat_password"
                class="form-control form-control-user ">
        </div>

    </div>




    <div class="text-center">
        <a href="/home" class="btn btn-primary btn-user">Back</a>
        <button type="submit" class="btn btn-success btn-user text-center">Update</button>
    </div>

</form>


